// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Expense {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  categoryId  Int
  amount      Float 
  category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  expenses    Expense[]
}